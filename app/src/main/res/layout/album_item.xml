<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginStart="8dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/album_artwork"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/album_artwork"
        app:layout_constraintStart_toEndOf="@+id/album_artwork"
        tools:text="The Essential Michael Jackson" />

    <TextView
        android:id="@+id/album_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/album_name"
        app:layout_constraintStart_toEndOf="@+id/album_artwork"
        tools:text="May 5th 2005" />
</android.support.constraint.ConstraintLayout>